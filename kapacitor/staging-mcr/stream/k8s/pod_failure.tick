// Alert when Pod goes to failed / unknown phase
stream
    |from()
        .database('staging-mcr')
        .measurement('kube_pod_status_phase')
    |where(lambda: "phase" == 'Failed' OR "phase" == 'Unknown')
    |groupBy('region', 'k8s_cluster_name', 'namespace','pod')
    |window()
        .period(5m)
        .every(5m)
    |sum('gauge')
        .as('pods')
    |alert()
        .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ {{ index .Tags "k8s_cluster_name" }} ] [ {{ index .Tags "namespace" }} ] [ {{ index .Tags "pod" }} ] [ pod_failure ] {{ .Level }}')
        .id('{{ .Name }}:{{ .Group }}/pod_failure')
        .crit(lambda: "pods" >= 2)
        .critReset(lambda: "pods" == 0)
        .stateChangesOnly()
        .topic('staging-mcr')