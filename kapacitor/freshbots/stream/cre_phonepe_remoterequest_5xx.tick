stream
    |from()
        .database('freshbots')
        .measurement('remoterequest_response_total')
    |where(lambda: "layer" == 'events' AND "status_code" =~ /^5/)
    |groupBy('region','host','status_code')
    |last('counter')
      .as('5xx_errors')
    |derivative('5xx_errors')
      .unit(1m)
      .nonNegative()
      .as('5xx_diff_1m')
    |window()
      .period(5m)
      .every(5m)
    |alert()
       .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ {{ index .Tags "host" }} ] [ 5xx_responses ] - {{ index .Fields "5xx_diff_1m" }}/5min {{ .Level }}')
    .crit(lambda: "5xx_diff_1m" >= 10)
    .critReset(lambda: "5xx_diff_1m" <= 0)
    .stateChangesOnly()
    .topic('freshbots')