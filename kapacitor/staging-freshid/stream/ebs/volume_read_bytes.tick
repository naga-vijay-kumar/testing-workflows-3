
//Alert when container memory happen
stream
    |from()
        .database('staging-freshid')
        .measurement('cloudwatch_aws_ebs')
    |groupBy('region', 'k8s_cluster_name', 'host')
    |window()
        .period(10m)
        .every(10m)
    |mean('volume_read_bytes_sum')
         .as('read_bytes_sum')
    |alert()
        .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ {{ index .Tags "k8s_cluster_name" }} ] [ {{ index .Tags "host" }} ] [ volume_read_bytes ] - {{ index .Fields "volume_read_bytes_sum" }} {{ .Level }}')
        .crit(lambda: "read_bytes_sum" > 5368709120 )
        .critReset(lambda: "read_bytes_sum" < 5100273664)
        .stateChangesOnly()
        .topic('staging-freshid')
