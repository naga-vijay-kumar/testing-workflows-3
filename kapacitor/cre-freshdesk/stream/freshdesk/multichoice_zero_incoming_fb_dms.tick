stream
  |from()
    .database('cre-freshdesk')
    .measurement('cre_cf_sherlock_incoming_facebook_events_total')
  |where(lambda: "payload_type" == 'facebook_realtime_messages' AND "account_id" == '986130')
  |derivative('counter')
    .unit(10m)
    .nonNegative()
    .as('fb_dms')
  |window()
    .period(5m)
    .every(5m)
  |mean('fb_dms')
    .as('fb_dms')
  |stateDuration(lambda: "fb_dms" == 0)
    .unit(1m)
  |alert()
    .message('[ {{ .Time }} ] [multichoice_zero_incoming_fb_dms] [ No incoming Facebook DMs for the last 5 minutes ] {{ .Level }}')
    .warn(lambda: "state_duration" >= 5 AND ((hour("time") > 4 OR (hour("time") == 4 AND minute("time") > 15)) AND ((hour("time") == 21 AND minute("time") < 15) OR (hour("time") < 21))))
    .warnReset(lambda: "state_duration" == 0)
    .stateChangesOnly()
    .topic('cre-freshdesk')