stream
  |from()
    .database('cre-freshdesk')
    .measurement('cre_freshdesk_5xx')
  |where(lambda: "ctlr" == 'Support::HomeController' AND "act" == 'index' AND "a_id" == '686961')
  |sum('count')
    .as('sum')
  |cumulativeSum('sum')
    .as('cumulative_sum')
  |derivative('cumulative_sum')
    .unit(1m)
    .nonNegative()
    .as('diff_1m')
  |window()
    .period(5m)
    .every(5m)
  |sum('diff_1m')
    .as('diff_tot')
  |alert()
      .message('[ {{ .Time }} ] [ Sling: Support Portal has thrown 5xx error atleast once in last 5 minutes. ] [freshdesk_sling_availability] {{ .Level }}')
      .crit(lambda: "diff_tot" >= 1)
      .critReset(lambda: "diff_tot" <= 1)
      .stateChangesOnly()
      .topic('cre-freshdesk')