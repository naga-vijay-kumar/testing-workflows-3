stream
  |from()
    .database('cre-freshdesk')
    .measurement('cre_cf_sherlock_channel_auth_issue')
  |where(lambda: "channel" == 'facebook' AND "account_id" == '986130')
  |alert()
    .message('[ {{ .Time }} ] [multichoice_fb_handle_reauth_required] [ Facebook page of Multichoice needs to be re-authenticated in Freshdesk. ] {{ .Level }}')
    .crit(lambda: "count" == 1)
    .critReset(lambda: "counter" == 0)
    .stateChangesOnly()
    .topic('cre-freshdesk')