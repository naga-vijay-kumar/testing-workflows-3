stream
  |from()
    .database('cre-freshdesk')
    .measurement('cre_freshdesk_central_stats')
  |groupBy('a_id','c','region')
  |window()
    .period(5m)
    .every(5m)
  |mean('p95_duration')
    .as('mean_p95')
  |alert()
    .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ {{ index .Tags "c" }} ] [ {{ index .Tags "a_id" }} ] [ central_p95_mean ] - {{ index .Fields "mean_p95" }} {{ .Level }}')
    .crit(lambda: "mean_p95" >= 500)
    .critReset(lambda: "mean_p95" < 500)
    .stateChangesOnly()
    .topic('cre-freshdesk')