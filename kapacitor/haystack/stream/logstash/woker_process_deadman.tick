stream
  |from()
    .database('haystack')
    .measurement('logstash_process')
  |where(lambda: "host" =~ /worker/)
  |groupBy('region','group','host')
  |deadman(0.0,180s)
    .message('[ {{ .Time }} ] [ {{ index .Tags "region"}} ] [ {{ index .Tags "host" }} ] [ logstash_process ] [ {{ if eq .Level "OK" }}alive{{ else }}dead{{ end }} ] [{{ index .Fields "emitted" }} points [ {{ .Level }} ]')
    .stateChangesOnly()
    .topic('haystack')
