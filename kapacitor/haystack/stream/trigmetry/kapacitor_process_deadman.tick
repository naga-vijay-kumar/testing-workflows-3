stream
  |from()
    .database('haystack')
    .measurement('kapacitor')
  |where(lambda: "group" == 'trigmetry' AND "host" =~ /kapacitor/)
  |groupBy('region','group','host')
  |deadman(0.0,180s)
    .message('[ {{ .Time }} ] [ {{ index .Tags "region"}} ] [ {{ index .Tags "host" }} ] [ kapacitor_process ] [ {{ if eq .Level "OK" }}alive{{ else }}dead{{ end }} ] [{{ index .Fields "emitted" }} points [ {{ .Level }} ]')
    .stateChangesOnly()
    .topic('haystack')
