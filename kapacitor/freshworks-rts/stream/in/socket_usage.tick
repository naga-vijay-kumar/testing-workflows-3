stream
  |from()
      .database('freshworks-rts')
      .measurement('hub_SocketsConnected')
  |where(lambda: "region" == 'ap-south-1')
  |groupBy('host')
  |window()
    .period(1m)
    .every(1m)
  |max('value')
    .as('value')
  |alert()
    .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ {{ index .Tags "host" }} ] [ sockets_usage_in ] - {{ index .Fields "value" }} {{ .Level }}')
    .id('{{ .Name }}:{{ .Group }}/sockets_usage_in')
    .warn(lambda: "value" > 14000)
    .warnReset(lambda: "value" <= 13000)
    .crit(lambda: "value" > 16000)
    .critReset(lambda: "value" <= 15000)
    .stateChangesOnly()
    .topic('freshworks-rts')