stream
  |from()
    .database('freshchat')
    .measurement('freshchat_cre_errors')
  |where(lambda: "appId" == '113893843993852' AND "type" == 'Integration' AND "method" == 'SLACK')
  |groupBy('type')
  |window()
    .period(10s)
    .every(10s)
  |mean('count')
    .as('slack_integration_failures')
  |alert()
    .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ cre_sling_slack_integration_failures ] - {{ index .Fields "slack_integration_failures" }} {{ .Level }}')
    .id('{{ .Name }}:{{ .Group }}/cre_sling_slack_integration_failures')
    .crit(lambda: "slack_integration_failures" >= 5)
    .critReset(lambda: "slack_integration_failures" == 0)
    .stateChangesOnly()
    .topic('freshchat')
