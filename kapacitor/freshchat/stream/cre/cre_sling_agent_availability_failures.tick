stream
  |from()
    .database('freshchat')
    .measurement('freshchat_cre_errors')
  |where(lambda: "appId" == '113893843993852' AND "type" == 'Agent' AND "method" =='AgentAvailability')
  |groupBy('type')
  |window()
    .period(10s)
    .every(10s)
  |mean('count')
    .as('Agent_availability_failures')
  |alert()
    .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ cre_sling_agent_availability_failures ] - {{ index .Fields "Agent_availability_failures" }} {{ .Level }}')
    .id('{{ .Name }}:{{ .Group }}/cre_sling_agent_availability_failures')
    .crit(lambda: "Agent_availability_failures" >= 1)
    .critReset(lambda: "Agent_availability_failures" == 0)
    .stateChangesOnly()
    .topic('freshchat')
