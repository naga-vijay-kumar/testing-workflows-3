stream
    |from()
        .database('freshworks-edge')
        .measurement('docker_container_mem')
    |groupBy('region', 'k8s_cluster_name', 'io.kubernetes.pod.namespace', 'io.kubernetes.pod.name', 'io.kubernetes.container.name')
    |window()
        .period(15m)
        .every(5m)
    |mean('used_percent')
        .as('mem_used')
    |alert()
        .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ {{ index .Tags "k8s_cluster_name" }} ] [ {{ index .Tags "io.kubernetes.pod.namespace" }} ] [ {{ index .Tags "io.kubernetes.pod.name" }} ] [ {{ index .Tags "io.kubernetes.container.name" }} ][ Memory Used ] - {{ index .Fields "container_mem_used" }}% {{ .Level }}')
        .crit(lambda: "mem_used" >= 60)
        .critReset(lambda: "mem_used" < 60)
        .id('{{ .Name }}:{{ .Group }}/container_mem_used')
        .stateChangesOnly()
        .topic('freshworks-edge')
