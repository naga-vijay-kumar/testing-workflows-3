//Alert when deployment stays pending]
stream
    |from()
        .database('freshworks-edge')
        .measurement('kube_node_status_condition')
    |where(lambda: 'condition' == 'MemoryPressure' AND 'status' == 'true')
    |groupBy('region', 'k8s_cluster_name', 'node')
    |window()
        .period(5m)
        .every(5m)
    |count('gauge')
        .as('under_pressure')
    |alert()
        .message('[ {{ .Time }} ] [ {{ index .Tags "region" }} ] [ {{ index .Tags "k8s_cluster_name" }} ] [ {{ index .Tags "node" }} ] [ mem_pressure ] - {{ index .Fields "under_pressure" }} - {{ .Level }}')
        .crit(lambda: "under_pressure" > 0 )
        .critReset(lambda: "under_pressure" == 0 )
        .id('{{ .Name }}:{{ .Group }}/mem_pressure')
        .stateChangesOnly()
        .topic('freshworks-edge')