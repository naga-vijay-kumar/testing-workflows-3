stream
  |from()
      .database('staging-freshworks-rts')
      .measurement('hub_ClientsCurrentlyConnected')
  |groupBy('stack','host')
  |window()
    .period(1m)
    .every(1m)
  |mean('value')
    .as('value')
  |alert()
    .message('[ {{ .Time }} ] [ {{ index .Tags "stack" }} ] [ {{ index .Tags "host" }} ] [ hub_down ] - {{ index .Fields "value" }} {{ .Level }}')
    .id('{{ .Name }}:{{ .Group }}/hub_down')
    .crit(lambda: "value" <= 0.0)
    .critReset(lambda: "value" > 1)
    .stateChangesOnly()
    .topic('staging-freshworks-rts')